#!/bin/sh
if [ $# -eq 0 ]
  then
    echo "No arguments supplied"
    exit
fi

DECIDIM_INSTANCE_PATH=$1
mkdir -p "$DECIDIM_INSTANCE_PATH/app/views" \
"$DECIDIM_INSTANCE_PATH/app/assets/stylesheets" \
"$DECIDIM_INSTANCE_PATH/app/assets/images" \
"$DECIDIM_INSTANCE_PATH/config/locales"

cp -r decidim/app/views/platoniq "$DECIDIM_INSTANCE_PATH/app/views"
cp -r decidim/app/assets/images/platoniq "$DECIDIM_INSTANCE_PATH/app/assets/images"
cp -r decidim/app/assets/stylesheets/platoniq "$DECIDIM_INSTANCE_PATH/app/assets/stylesheets"
cp -r decidim/config/locales/platoniq.yml "$DECIDIM_INSTANCE_PATH/config/locales/platoniq.yml"